{
  "manifest_version": 2,
  "name": "Merriam-Webster's Learner's Dictionary (third-party extension)",
  "version": "1.0.0",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content-scripts.js"]  
  }],

  "options_ui": {
    "page": "options.html"
  },

  "web_accessible_resources": [
    "images/*",
    "stylesheet.css"
  ],

  "permissions": [
    "*://www.dictionaryapi.com/api/v1/references/learners/xml/*",
    "bookmarks",
    "storage",
    "menus"
  ]
}