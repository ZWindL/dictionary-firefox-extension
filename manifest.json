{
  "manifest_version": 2,
  "name": "Wordie",
  "version": "1.0.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "dictionary@notarealaddress.com",
      "strict_min_version": "42.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content_scripts.js"]  
  }],

  "web_accessible_resources": [
    "images/*",
    "stylesheet.css"
  ],

  "permissions": [
    "*://www.dictionaryapi.com/api/v1/references/learners/xml/*",
    "https://media.merriam-webster.com/soundc11/*",
    "bookmarks",
    "storage"
  ]
}